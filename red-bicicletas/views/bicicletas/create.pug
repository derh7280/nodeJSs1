extends ../layout

block content
    a(href='/bicicletas') Atras

    br
    br
    br

    h1 Nueva Bicicleta

    br 
    br

    form(action='/bicicletas/create' method='POST')
        .form-row
            .form-group.col-md-2
                label(for='id') ID:
                input#id.form-control(type='text' name='id')
            .form-group.col-md-5
                label(for='color') Color
                input#color.form-control(type='text' name='color')  
            .form-group.col-md-5
                label(for='modelo') Modelo
                //- select#modelo.form-control(name='modelo')
                //-     option Urbana
                //-     option Ruta
                input#modelo.form-control(type='text' name='modelo')  
        .form-row
            .form-group.col-md-6
                label(for='lat') Latitud
                input#lat.form-control(type='text' name='lat')
            .form-group.col-md-6
                label(for='lng') Longitud
                input#lng.form-control(type='lng' name='lng')
        input.btn.btn-primary(type='submit' value='Crear')
    