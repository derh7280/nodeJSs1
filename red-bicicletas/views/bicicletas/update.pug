extends ../layout

block content
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='/') RedBici
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/bicicletas') Ir a listado
    .container
    br
    br
    h3 Actualizando Bicicleta
    br 
    br
    form(action=`/bicicletas/${bici.id}/update` method='post')
        .form-row
            .form-group.col-md-2
                label(for='id') ID:
                input#id.form-control(type='number' name='id' value=bici.id required='')
            .form-group.col-md-5
                label(for='color') Color
                input#color.form-control(type='text' name='color' value=bici.color required='')  
            .form-group.col-md-5
                label(for='modelo') Modelo
                //- select#modelo.form-control(name='modelo')
                //-     option Urbana
                //-     option Ruta
                input#modelo.form-control(type='text' name='modelo' value=bici.modelo required='')  
        .form-row
            .form-group.col-md-6
                label(for='lat') Latitud
                input#lat.form-control(type='text' name='lat' value=bici.ubicacion[0] required='')
            .form-group.col-md-6
                label(for='lng') Longitud
                input#lng.form-control(type='lng' name='lng' value=bici.ubicacion[0] required='')
        input.btn.btn-outline-primary(type='submit' value='Actualizar')
