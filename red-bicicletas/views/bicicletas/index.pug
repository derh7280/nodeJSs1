extends ../layout

block content
    a(href='/bicicletas/create') Nueva bicicleta
    br
    br

    table.table.table-striped
        thead.thead-dark
            tr
            th(scope='col') #
            th(scope='col') Color
            th(scope='col') Modelo
            th(scope='col') Ubicacion
            th(scope='col') 
            th(scope='col') 
            th(scope='col') 
        tbody
            each bici in bicis
              tr
              th(scope='row')= bici.id
              td= bici.color
              td= bici.modelo
              td= bici.ubicacion 
              td
                a(href='bicicletas/' + bici.id + '/view') Ver
              td
                a(href='bicicletas/' + bici.id + '/update') Editar
              td
                form.inline(method='post' action='bicicletas/' + bici.id + '/delete')
                input#id.form-control(type="hidden" name='id' value= bici.id) 
                button.link-button.btn-danger(type='submit' name='submit_param' value='submit_param' class='btn')= 'Eliminar'
